- var ui = mode !== 'stream';
<!DOCTYPE html>
html(lang="en")
    head
        title= title
        meta(charset='utf-8')
        if ui
            meta(name="viewport" content="width=device-width, initial-scale=1")
            link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet")
            link(href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css" rel="stylesheet")

        link(href="https://fonts.googleapis.com/css?family=Roboto:400" rel="stylesheet")
        link(href="/font-awesome.min.css" rel="stylesheet")
        link(href="/style.css" rel="stylesheet")

        block head
    
    body(style=ui ? '': 'background: none !important')

    div(class="container-fluid")
        - var hasError = typeof(errors) === typeof [] && errors.length > 0;
        if hasError
            div(class="alert alert-danger text-center") #{errors.join('<br>')}

        if ui && user
            div.row.col-ui
                div.col-3.col-logged
                    block userProfile
                        if user
                            div(class="card user-profile")
                                div(class="card-body")
                                    div(class="fw-bold")
                                            i(class="fa fa-user me-3")
                                            span #{user.username}
                                    div(class="text-left mt-3") 
                                        div(class="fw-bold") Token
                                        div(class="copy") #{user.token}

                    block appList
                        if appList
                            div(class="card app-list")
                                div(class="card-body")
                                    h4.text-center Applications list
                                    ul.list-group
                                        each app in appList
                                            li.list-group-item
                                                - var url = `${protocol}://${host}/render/${app}?mode=${mode}`;
                                                a(href=url) #{app}
                div.col-9
                    block content
        else
            block content

    script(src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js")

    if ui
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js")

    block scripts