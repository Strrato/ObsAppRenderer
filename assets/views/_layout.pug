- var ui = mode !== 'stream';
<!DOCTYPE html>
html(lang="en")
    head
        title= title
        meta(charset='utf-8')
        if ui
            meta(name="viewport" content="width=device-width, initial-scale=1")
            link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet")
            link(href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css" rel="stylesheet")

        link(href="https://fonts.googleapis.com/css?family=Roboto:400" rel="stylesheet")
        link(href="/font-awesome.min.css" rel="stylesheet")
        link(href="/style.css" rel="stylesheet")

        block head
    
    body(style=ui ? '': 'background: none !important')

    div(class="container-fluid")
        - var hasError = typeof(errors) === typeof [] && errors.length > 0;
        if hasError
            div(class="alert alert-danger text-center") #{errors.join('<br>')}

        if ui && user
            div.row.col-ui
                div.col-3.col-logged
                    block userProfile
                        if user
                            div(class="card user-profile")
                                div(class="card-body row")
                                    div(class="profile-actions col-2")
                                        div(class="btn-group" role="group")
                                            a(class="btn btn-danger btn-xs" href="/logout")
                                                i.fa.fa-sign-out

                                    div(class="profile-details col-8")
                                        div(class="fw-bold")
                                                i(class="fa fa-user me-3")
                                                span #{user.username}
                                                span.ms-3 Token
                                                    i(class="ms-2 fa fa-eye show-token" title="Show token" data-content=user.token)
                                                    i(class="fa fa-refresh ms-2 refresh-token" title="Refresh token")

                                    div(class="profile-right col-2")
                                        i(class="fa fa-cog user-settings ms-2")

                    block appList
                        if appList
                            div(class="card app-list")
                                div(class="card-body")
                                    h4.text-center Applications list
                                    ul.list-group
                                        each app in appList
                                            li.list-group-item
                                                - var url = `${protocol}://${host}/render/${app}?mode=${mode}`;
                                                a(href=url) #{app}
                    block admin
                        if isAdmin
                            div(class="card app-list")
                                div(class="card-body")
                                    h4.text-center Admin section
                                    div(class="btn-group" role="group")
                                        button(type="button" class="btn btn-xs btn-warning admin-add-user")
                                            i.fa.fa-plus
                                            span.ms-2 Add user

                div.col-9
                    block content
        else
            block content

    script(src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js")

    if ui
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js")
        script(src="https://cdn.jsdelivr.net/npm/sweetalert2@11")
        script(type="text/javascript")
            include js/layout.js

    if isAdmin
        script(type="text/javascript")
            include js/admin.js

    block scripts